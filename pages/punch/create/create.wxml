<view class="main-container">
  <view class='box-title'>任务描述</view>
  <view class="input-box content">
    <!-- <textarea placeholder="一句话描述，例如：10个俯卧撑 or 30天读完xxx书" bindblur="contentChange" /> -->
    <input placeholder="一句话描述，例如：10个俯卧撑 or 30天读完xxx书" bindblur="contentChange" />
  </view>

  <view class='time-box'>
    <view class='box-title'>打卡周期</view>
    <view class='duration-time'>
      <input type='text' value='{{period}}' bindblur='periodChange'></input>
      <text>天打卡一次 </text>
      <text>( 整数天 )</text>
    </view>
    <view class="input-box">
      <view class="time-list">
        <text class="title">开始时间</text>
        <picker class="date" mode="date" value="{{beginDate}}" bindchange="bindBeginDateChange">{{beginDate}}</picker>
      </view>
    </view>
  </view>
  <view class="createM">
    <button type="primary" size="default" bindtap="createActivity">确认创建</button>
  </view>
</view>